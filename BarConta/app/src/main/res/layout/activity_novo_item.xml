<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.puc.pos.barconta.NovoItemActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeItem"
        android:layout_alignParentTop="true"
        android:layout_marginTop="87dp"
        android:hint="Nome"
        android:layout_alignLeft="@+id/valorItem"
        android:layout_alignStart="@+id/valorItem"
        android:layout_alignRight="@+id/valorItem"
        android:layout_alignEnd="@+id/valorItem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/valorItem"
        android:hint="Valor"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/nomeItem"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btnSalvarItem"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/valorItem"
        android:layout_alignRight="@+id/valorItem"
        android:layout_alignEnd="@+id/valorItem"
        android:layout_alignLeft="@+id/valorItem"
        android:layout_alignStart="@+id/valorItem" />

</RelativeLayout>
